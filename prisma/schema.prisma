generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Account {
  id                String  @id @default(uuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(uuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String     @id @default(uuid())
  name          String?
  email         String?    @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
  filaments     Filament[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Manufacturer {
  id        String     @id @default(uuid())
  name      String?    @unique
  createdAt DateTime?  @default(now())
  updatedAt DateTime?  @updatedAt
  filaments Filament[] @relation("ManufacturerToFilament")
}

model Color {
  id        String     @id @default(uuid())
  name      String?    @unique
  createdAt DateTime?  @default(now())
  updatedAt DateTime?  @updatedAt
  filaments Filament[] @relation("ColorToFilament")
}

model Material {
  id        String     @id @default(uuid())
  name      String?    @unique
  createdAt DateTime?  @default(now())
  updatedAt DateTime?  @updatedAt
  filaments Filament[] @relation("MaterialToFilament")
}

model Tag {
  id        String     @id @default(uuid())
  name      String?    @unique
  filaments Filament[]
}

model Filament {
  id              String       @id @default(uuid())
  user            User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId          String
  status          String       @default("NEW")
  diameter        Int
  manufacturer    Manufacturer @relation("ManufacturerToFilament", fields: [manufacturerId], references: [id])
  manufacturerId  String
  material        Material     @relation("MaterialToFilament", fields: [materialId], references: [id])
  materialId      String
  color           Color        @relation("ColorToFilament", fields: [colorId], references: [id])
  colorId         String
  weight          Float
  remainingWeight Float
  createdAt       DateTime     @default(now())
  updatedAt       DateTime?    @updatedAt
  tags            Tag[]

  @@index([manufacturerId])
  @@index([materialId])
  @@index([colorId])
  @@index([userId])
}
